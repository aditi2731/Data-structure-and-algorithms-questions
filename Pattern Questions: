5 4 3 2 1 2 3 4 5

#include <iostream>
using namespace std;

int main() {
    int n = 5; // Number of rows

    // Outer loop for each row
    for (int i = 1; i <= n; i++) {
        // Print spaces before the pattern
        for (int j = 1; j <= n - i; j++) {
            cout << "  ";  // Two spaces for proper alignment
        }

        // Print decreasing part of the pattern
        for (int j = i; j >= 1; j--) {
            cout << j << " ";
        }

        // Print increasing part of the pattern
        for (int j = 2; j <= i; j++) {
            cout << j << " ";
        }

        // Move to the next line after printing each row
        cout << endl;
    }

    return 0;
}







