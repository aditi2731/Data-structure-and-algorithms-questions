#include <iostream>
using namespace std;
int main()
{
    int n=6;
   
   for(int i=n; i>=1;i--){
       
       for(int k=1;k<=n-i;k++){
           cout<<" ";
       }
       for(int j=1;j<=2*i-1;j++){
               cout<<"*";
       }
      cout<<endl;
   }

    return 0;
}

